<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GOOGLECLASS2">

    <TextView
        android:id="@+id/textView62"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="GOOGLE CLASSROOM"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            app:srcCompat="@drawable/class2" />

        <TextView
            android:id="@+id/textView64"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione Tema y aparecerá una ventana donde pedirá el nombre del tema a agregar, escriba el tema 1 y haga clic en Agregar. Repita este procedimiento para los siguientes temas.  "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            app:srcCompat="@drawable/class3" />

        <TextView
            android:id="@+id/textView65"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para poner los temas en orden podemos arrastrarlos al orden correcto. Lo que también podríamos hacer desde un inicio, es que al dar de alta los temas, comencemos desde el último hacia el primero, y ya no habrá necesidad de reordenarlos." />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            app:srcCompat="@drawable/class4" />

        <Button
            android:id="@+id/btnsig10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:onClick="onClick18"
            android:text="SIGUIENTE" />
    </LinearLayout>
</LinearLayout>