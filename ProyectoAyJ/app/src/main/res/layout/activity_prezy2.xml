<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PREZY2">

    <TextView
        android:id="@+id/textView80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="PREZY"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            app:srcCompat="@drawable/prezi2" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:srcCompat="@drawable/prezi3" />

        <TextView
            android:id="@+id/textView83"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si elegimos crear un Prezi en blanco, elegiremos a continuación el tipo de marco que queremos añadir a nuestra presentación: Círculo, Corchetes, Rectángulo o Invisible. Esta última opción permite ocultar las líneas que delimitan el marco.  Dentro del círculo nos aparecerán los símbolos: zoom, el plus para ampliar, el minus para disminuir, una mano que nos permitirá movernos arriba y abajo a izquierda y derecha.  "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnsiguiente2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:onClick="onClick"
            android:text="SIGUIENTE" />

    </LinearLayout>
</LinearLayout>