<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WhatsApp">

    <TextView
        android:id="@+id/txtVwWp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="WHATSAPP"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Como se sabe, esta aplicación perteneciente a Facebook, es una de las más usadas, debido a que es gratuita y está disponible en todos los dispositivos inteligentes (Smartphones)."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear grupos de chat:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estos grupos, tienen una capacidad máxima de 256 integrantes.  -Abre WhatsApp > toca el ícono de más opciones"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wh" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo grupo.                                                                                                    También puedes tocar Nuevo chat"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wh2" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Busca o selecciona contactos para añadir al grupo. Después, toca el ícono de la flecha verde.  Ingresa el asunto del grupo. Este será el nombre del grupo y será visible para todos los participantes.  "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los asuntos tienen un límite de 25 caracteres.   Puedes tocar el ícono de emoji"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wh3" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puedes tocar el ícono de cámara para añadir una imagen del grupo. Podrás elegir entre usar tu cámara para tomar una foto, seleccionar una imagen de tu galería o buscar en Internet. Cuando selecciones una imagen, ésta aparecerá junto al nombre del grupo en la pestaña CHATS."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnsig1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="SIGUIENTE"
            android:onClick="onClick10"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>