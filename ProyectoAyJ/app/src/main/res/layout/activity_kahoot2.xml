<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Kahoot2">

    <TextView
        android:id="@+id/textView134"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="KAHOOT"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView137"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear un Kahoot!: el quiz"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView138"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz es el término anglosajón utilizado para el Kahoot! más tradicional: un juego de preguntas y respuestas, el de toda la vida, y que es el planteamiento ideal para utilizar esta herramienta en el aula. No obstante, te animamos a probar las otras dos posibilidades (discusión y encuesta) que también pueden ser muy interesantes para usar en clase.  "
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/imageView58"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/ka2" />

        <TextView
            android:id="@+id/textView139"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulsando en «Quiz» nos llevará directamente a la página para crearlo, algo similar a lo que tenéis aquí arriba. En este primer paso deberemos ir rellenando los campos que nos piden: título, descripción, idioma, público objetivo, etc. Cuando lo tengamos, pulsamos sobre el botón verde de la parte superior derecha para continuar."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView59"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            app:srcCompat="@drawable/ka3" />

        <Button
            android:id="@+id/btnsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:onClick="onClick"
            android:text="SIGUIENTE" />
    </LinearLayout>
</LinearLayout>